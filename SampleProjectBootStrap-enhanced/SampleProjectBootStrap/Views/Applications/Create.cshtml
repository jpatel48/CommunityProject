@model ProjectPlanning.Models.Application

@{
    ViewBag.Title = "Create Application";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Application</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PostingID, "Posting", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PostingID", null,"Select a Job Posting", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PostingID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ApplicantID, "Applicant", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ApplicantID", null,"Select the Applicant", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ApplicantID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FileStoreID, "FileStore", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FileStoreID", null,"Select a File", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FileStoreID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List of Applications", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
